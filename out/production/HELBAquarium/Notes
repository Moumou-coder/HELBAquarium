checkFixedGameElementCollision(){
if ((elem.getClass() == Insect.class)) {
                    if (mvElem.getPos_x() == elem.getPosX() && mvElem.getPos_y() == elem.getPosY()) {
                        elem.setPosX(void_x);
                        elem.setPosY(void_y);
//                    elem.triggerAction(this);
                    }
                }
                if ((elem.getClass() == Pellet.class)) {
                    if (mvElem.getPos_x() == elem.getPosX() && mvElem.getPos_y() == elem.getPosY()) {
                        elem.setPosX(void_x);
                        elem.setPosY(void_y);
//                    elem.triggerAction(this);
